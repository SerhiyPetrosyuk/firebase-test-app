<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mlsdev.serhii.shoplist">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:name=".ShopListApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activity.MainActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"/>

        <activity
            android:name=".view.activity.ItemDetailsActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:label="" />

        <activity
            android:name=".view.activity.CreateAccountActivity"/>
        <activity
            android:name=".view.activity.SignInActivity"/>
        <activity android:name=".view.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>